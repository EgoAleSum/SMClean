{
  "name": "smclean",
  "version": "2.0.0",
  "description": "String cleanup utilities and input sanitization",
  "main": "dist/SMClean.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "npm run tsc",
    "docs": "npm run typedoc",
    "tsc": "./node_modules/.bin/tsc",
    "test": "TZ=Etc/UTC ./node_modules/.bin/ts-node node_modules/istanbul/lib/cli.js cover -e .ts  -x \"*.d.ts\" -x \"*.test.ts\" ./node_modules/.bin/_mocha --report html -- -R test test/**/*.test.ts",
    "test-nocov": "TZ=Etc/UTC ./node_modules/.bin/_mocha -r ts-node/register test/**/*.test.ts",
    "lint": "npm run tslint",
    "tslint": "./node_modules/.bin/tslint -p tsconfig.json",
    "typedoc": "./node_modules/.bin/typedoc --name SMClean --out docs/ --readme README.md --target ES6 --module commonjs --mode modules src",
    "prepublishOnly": "npm run tslint && npm run compile && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItalyPaleAle/SMClean.git"
  },
  "keywords": [
    "cleanup",
    "input",
    "sanitization",
    "string"
  ],
  "author": "Alessandro Segala, SixthMonkey, Zap In",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ItalyPaleAle/SMClean/issues"
  },
  "homepage": "https://github.com/ItalyPaleAle/SMClean",
  "dependencies": {
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.21",
    "smhelper": "^1.2.0",
    "validator": "^10.7.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/moment-timezone": "^0.5.8",
    "@types/node": "^10.9.1",
    "@types/validator": "^9.4.1",
    "coveralls": "^3.0.2",
    "istanbul": "v1.1.0-alpha.1",
    "mocha": "^5.2.0",
    "should": "^13.2.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1"
  }
}
